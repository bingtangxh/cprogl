{
    "tasks": [
        {
            "type": "shell",
            "label": "C/C++: cl.exe 生成活动文件喵",
            "command": "cl.exe",
            "args": [
                "/nologo",
                "/Z7",
                "/GF",
                "/DEBUG",
                "/FS",
                "/EHsc",
                "/W3",
                "/Fe:",
                "C:\\cproglexefile\\${fileBasenameNoExtension}_x64.exe",
                "${file}",
                "/Fo\"C:\\\\cproglExefile\\\\${fileBasenameNoExtension}_x64\"",
                "/link",
                "/OUT:C:\\cproglExefile\\${fileBasenameNoExtension}_x64.exe",
                "&&",
                "del",
                "C:\\cproglexefile\\${fileBasenameNoExtension}_x64.obj",
                "&&",
                "del",
                "C:\\cproglexefile\\${fileBasenameNoExtension}_x64.ilk",
            ],
            "options": {
                "cwd": "${workspaceFolder}",
                "shell":
                {
                    "executable":
                    "C:\\Windows\\System32\\cmd.exe",
                    "args":[
                        "/v:on",
                        "/r",
                        "vcvarsall.bat",
                        "x64",
                        "&&",
                    ]
                }
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "使用生成工具编译生成 x64 的二进制文件喵"
        },
