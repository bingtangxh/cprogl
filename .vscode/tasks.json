        {
            "type": "cppbuild",
            "label": "C/C++: gcc.exe 生成活动文件（gcc.exe）",
            "command": "gcc.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "C:\\cproglExefile\\${fileBasenameNoExtension}.exe",
                "-lole32",
                "-lstdc++"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "调试器生成的任务。"
        },
